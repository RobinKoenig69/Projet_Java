                       <yAxis>
                           <NumberAxis label="Places Disponibles" />
                       </yAxis>
                   </BarChart>

                   <BarChart fx:id="topAttractions" prefHeight="300" prefWidth="600">
                       <xAxis>
                           <CategoryAxis label="Attraction" />
                       </xAxis>
                       <yAxis>
                           <NumberAxis label="Nb Réservations" />
                       </yAxis>
                   </BarChart>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                  </HBox>

               </children>
            </VBox>
         </children>
