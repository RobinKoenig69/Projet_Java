                       <yAxis>
                           <NumberAxis label="Revenu (€)" />
                       </yAxis>
                   </BarChart>

                   <BarChart fx:id="placesDispoParCategorie" prefHeight="300" prefWidth="600">
                       <xAxis>
                           <CategoryAxis label="Catégorie" />
