      <VBox prefHeight="1073.0" prefWidth="1920.0">
         <children>
      <AnchorPane id="Content" minHeight="-1.0" minWidth="-1.0" prefHeight="100.0" prefWidth="1920.0">
        <children>
                  <VBox prefHeight="100.0" prefWidth="1920.0">
                     <children>
                <Label alignment="CENTER" style="&#10;" text="Statistiques :" textAlignment="CENTER" wrapText="false">
                           <font>
                      <Font size="22.0" fx:id="x1" />
                           </font>
                           <textFill>
                      <Color red="0.624" green="0.624" blue="0.624" fx:id="x2" />
                           </textFill>
                           <padding>
                              <Insets left="20.0" top="20.0" />
                           </padding>
                        </Label>
                     </children>
                  </VBox>
        </children>
      </AnchorPane>
            <VBox prefHeight="963.0" prefWidth="1920.0">
               <children>
